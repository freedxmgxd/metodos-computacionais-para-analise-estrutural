{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Octave Script with Persist",
      "type": "shell",
      "command": "octave",
      "args": ["--persist", "${file}"],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "close": false
      }
    }
  ]
}
